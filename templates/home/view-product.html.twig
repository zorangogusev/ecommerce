{% extends('base.html.twig') %}

{% block body %}

    <div>
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="div-big-image mx-auto" style="background-image:url('/images/{{ product.image }}')"></div>
            </div>
            <div class="col-md-6">
                <h3 class="font-weight-bold">{{ product.name }}</h3>
                <p>{{ product.description }}</p>
                <hr>
                <div class="row">
                    <div class="col-6 text-left">
                        <span class="price-for-product">75</span> <i class="fas fa-euro-sign"></i>
                    </div>
                    <div class="col-6 text-right">
                        Full price <span class="full-price-for-product">75</span> <i class="fas fa-euro-sign"></i>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6 text-left">
                        Campaign
                    </div>
                    <div class="col-6 text-right">
                        19 days 12-34-55
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6 text-left">
                        Size
                    </div>
                    <div class="col-6 text-right">
                        Select size
                        <select class="select-size-of-product">
                            {% for productAttribute in productAttributes %}
                            <option data-productAttributeId="{{ productAttribute.id }}" data-price="{{ productAttribute.price }}">
                                {{ productAttribute.size }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6 text-left">
                        <select class="select-product-quantity">
                            <option data-quantity="1">1</option>
                            <option data-quantity="2">2</option>
                        </select>
                    </div>
                    <div class="col-6 text-right">
                        <a class="text-dark" href="javascript:void(0)"><i class="fa fa-arrow-right"></i> See Cart</a>
                    </div>
                    <p>Some text here</p>
                </div>
                <div>
                    <p>Some text here</p>
                    <button class="btn btn-block btn-dark button-full-price-for-product"> </button>
                    <p class="text-center">Designer Page</p>
                </div>
                <div>
                    <p class="text-right"><i class="far fa-heart"></i> Some text here</p>
                    <p class="text-right"><i class="fas fa-truck"></i> Some text here</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 div-small-image-pl">
                <div class="div-small-image mx-auto" style="background-image:url('/images/{{ product.image }}')"></div>
            </div>
            <div class="col-md-6">
                <div class="div-custom-select-class">
                    <select class="form-select custom-select-class">
                        <option selected>Some text here</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <select class="form-select custom-select-class">
                        <option selected>Some text here</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>

            </div>
        </div>

        <div class="row margin-top-100 text-center">
            <p class="col-md-12">YOU MAY ALSO LIKE THIS</p>
            <div class="clearfix"></div>
            {% for product in youMyAlsoLikeProducts %}
            <div class="col-md-3 container-for-random-products pt-3">
                <a href="{{ path('view', { id: product.id }) }}">
                    <div class="row">
                        <div class="col-12 div-small-image-pl">
                            <div class="div-small-image mx-auto float-none" style="background-image:url('/images/{{ product.image }}')"></div>
                        </div>
                        <div class="col-12 ">
                            <p>{{ product.name }}</p>
                            <p>{{ product.description }}</p>
                        </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div> <!-- main div -->


{% endblock %}